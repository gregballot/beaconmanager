<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.epitech.hub.lcl.beaconsetter" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BeaconGetterActivity"
            android:label="@string/title_activity_beacon_getter" >
        </activity>
        <activity
            android:name=".BeaconEraserActivity"
            android:label="@string/title_activity_beacon_eraser" >
        </activity>
        <activity
            android:name=".BeaconListActivity"
            android:label="@string/title_activity_beacon_list" >
        </activity>
    </application>

</manifest>
